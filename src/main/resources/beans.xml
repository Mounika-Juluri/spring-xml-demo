<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="abc"/>
        <constructor-arg name="gender" value="male"/>
        <constructor-arg name="age" value="20"/>
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="abc"/>
        <constructor-arg index="1" value="female"/>
        <constructor-arg index="2" value="60"/>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="abc"/>
        <constructor-arg type="String" value="male"/>
        <constructor-arg type="int" value="40"/>
    </bean>

    <bean name="MovieA,MovieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor"/>
    </bean>
    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"/>
    </bean>
    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"/>
    </bean>


</beans>